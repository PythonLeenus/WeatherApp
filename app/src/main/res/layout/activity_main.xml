<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/iv_weather_bg"
            android:src="@drawable/snow_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">


<!--            Added this fragment for Google autocomplete         -->
            <fragment android:id="@+id/autocomplete_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_city_name"
                android:fontFamily="@font/google_sans_bold"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:text="Waterloo"
                android:gravity="center"
                android:paddingBottom="15dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date_and_time"
                android:fontFamily="@font/google_sans_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="9 January, 2:41 PM"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_max_temp"
                    android:layout_weight="2"
                    android:fontFamily="@font/google_sans_medium"
                    android:textColor="@color/white"
                    android:text="Day 12ยบ"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_min_temp"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:text="Night 10ยบ"
                    android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_temp"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"
                    android:textColor="@color/white"
                    android:text="16ยบ"
                    android:textSize="60sp"/>


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/iv_weather_icon"
                    android:src="@drawable/clear"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_feels_like"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"
                    android:textColor="@color/white"
                    android:text="Feels like 16ยบ"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_weather_type"
                    android:layout_weight="3"
                    android:fontFamily="@font/google_sans_medium"
                    android:textColor="@color/white"
                    android:text="Drizzle"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>